# ==== RapidAPI (Real-Time Amazon Data) ====
RAPIDAPI_KEY=
RAPIDAPI_HOST=real-time-amazon-data.p.rapidapi.com

# ==== OpenAI ====
OPENAI_API_KEY=

# ==== Shopify ====
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ADMIN_ACCESS_TOKEN=

# ==== Import Keywords (comma separated) ====
KEYWORDS=wireless earbuds,home office chair,fitness tracker

# ==== Import Filters (from source price) ====
DEFAULT_COUNTRY=US
MIN_PRICE_USD=20
MAX_PRICE_USD=150

# ==== Auto-pricing Rules ====
# % markup applied to source price (e.g. 35 = +35%)
MARKUP_PERCENT=35
# End all prices with this (0.99 common in stores).
PRICE_ENDING=0.99
# Fallback price if source price missing/bad
FALLBACK_PRICE_USD=19.99

# ==== Image Enhancement / Optimization Hooks ====
# IMAGE_ENHANCEMENT_MODE: none | proxy
IMAGE_ENHANCEMENT_MODE=none
# If mode=proxy, this URL will be used as: PROXY_URL?url=<encoded_src>
IMAGE_PROXY_URL=

# ==== Web Dashboard ====
PORT=3000

# ==== Database (Prisma) ====
# For local dev with SQLite:
# DATABASE_URL="file:./dev.db"
# For Railway Postgres (example):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
DATABASE_URL=
